        <package name="which"/>
        <package name="udev"/>
        <package name="wicked"/>
        <package name="iproute2"/>
        <package name="psmisc"/>
        <package name="sysvinit-tools"/>
        <package name="e2fsprogs"/>
    </packages>
    <packages type="delete" profiles="default,diskless,xen">
        <package name="dracut"/>
        <package name="cracklib-dict-full"/>
        <package name="diffutils"/>
        <package name="fillup"/>
        <package name="gdbm"/>
