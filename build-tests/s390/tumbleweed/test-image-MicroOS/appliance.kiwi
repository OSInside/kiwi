                <option name="--cipher" value="aes-xts-plain64"/>
                <option name="--key-size" value="256"/>
            </luksformat>
            <oemconfig>
                <oem-unattended>true</oem-unattended>
                <oem-resize>true</oem-resize>
            </oemconfig>
            <bootloader name="zipl" timeout="10">
